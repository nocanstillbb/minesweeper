{
  "name": "@nocanstillbb/minesweeper",
  "version": "0.1.0",
  "description": "test",
  "source": "./src/index.tsx",
  "main": "./src/index.tsx",
  "module": "./src/index.tsx",
  "exports": {
    ".": {
      "import": {
        "types": "./src/index.d.tsx",
        "default": "./src/index.tsx"
      },
      "require": {
        "types": "./src/index.d.tsx",
        "default": "./src/index.tsx"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*",
    "windows"
  ],
  "scripts": {
    "example": "yarn workspace minesweeper-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nocanstillbb/minesweeper.git"
  },
  "author": "huangbinbin <kok.bing@qq.com> (https://github.com/nocanstillbb)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nocanstillbb/minesweeper/issues"
  },
  "homepage": "https://github.com/nocanstillbb/minesweeper#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@nocanstillbb/prism": "*",
    "@nocanstillbb/prism-rn": "*"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-windows": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "codegen",
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNMinesweeperSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "outputDir": {
      "ios": "ios/generated",
      "android": "android/generated"
    },
    "android": {
      "javaPackageName": "com.minesweeper"
    },
    "windows": {
      "namespace": "MinesweeperCodegen",
      "outputDirectory": "windows/Minesweeper/codegen",
      "separateDataTypes": true
    }
  },
  "create-react-native-library": {
    "type": "turbo-module",
    "languages": "cpp",
    "version": "0.48.9"
  },
  "devDependencies": {
    "react-native-windows": "^0.79.0"
  },
  "react-native-windows": {
    "init-windows": {
      "name": "Minesweeper",
      "namespace": "Minesweeper",
      "template": "cpp-lib"
    }
  }
}
